{
    "version": 2,
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.7.1"
      }
    },
    "routes": [
      {
        "src": "/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|ico|ttf|woff|woff2|eot|otf|webp|avif|txt)$",
        "dest": "/public/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/api/index.php"
      }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false",
      "APP_URL": "https://tu-app.vercel.app",
      "DB_CONNECTION": "mysql",
      "DB_HOST": "tu-host-de-bd",
      "DB_PORT": "3306",
      "DB_DATABASE": "nombre-de-tu-bd",
      "DB_USERNAME": "tu-usuario-bd",
      "DB_PASSWORD": "tu-password-bd"
    }
  }
  